{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir" : "dist",
    "strict": false,
    "baseUrl": ".",
     "types": [
      "node"
    ],
    "paths": {
      "src/*": ["src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}

